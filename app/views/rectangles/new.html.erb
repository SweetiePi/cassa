<%= form_for :rectangle, url: rectangles_path do |f| %>

<% if @rectangle.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@rectangle.errors.count, "error") %> prohibited
        this rectangle from being saved:
