    ['Brown', 'Brown'],
    ['Gray', 'Gray'],
    ['Green', 'Green'],
    ['Orange', 'Orange'],
    ['Pink', 'Pink'],
    ['Purple', 'Purple'],
    ['Red', 'Red'],
    ['White', 'White'],
    ['Yellow', 'Yellow']])) %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>

  <p>
    <%= f.label :images %><br>
    <%= f.select(:images,
    options_for_select([['NoImage', 'NoImage'],
    ['GangnamStyle', 'GangnamStyle'],
    ['GGDanny', 'GGDanny'],
    ['Pepsi', 'Pepsi'],
    ['Pikachu', 'Pikachu'],
