<body>

<h1> Create a New Patient </h1>
<%= form_for :patient, url: patients_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :dateofbirth %><br>
    <%= f.text_area :dateofbirth %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= f.text_area :status %>
  </p>

  <p>
    <%= f.label :medication %><br>
    <%= f.text_area :medication %>
  </p>

  <p>
    <%= f.label :emergencycontact %><br>
    <%= f.text_area :emergencycontact %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

</body>
